[advice]
	detachedHead = false

[color]
	ui = always
	branch = always
	diff = always
	interactive = always
	status = always

[core]
	editor = helix

[filter "lfs"]
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
	clean = git-lfs clean -- %f

[init]
	defaultBranch = main

[pull]
	rebase = true

[push]
	autoSetupRemote = true

[rerere]
	enabled = true

[user]
	name = Jules Wiriath
	email = jules@wiriath.com

[includeIf "gitdir:~/hsh/workspace/assistants/"]
	path = "~/.config/gitcfg/epita"

[includeIf "gitdir:~/hsh/workspace/hexa/"]
	path = "~/.config/gitcfg/hexaglobe"

[includeIf "gitdir:~/hsh/workspace/perso/"]
	path = "~/.config/gitcfg/perso"
